<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_welcome"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#99d4ead8"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.shahr.salesmanagement.WelcomeActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Welcome"
        android:textAllCaps="true"
        android:textSize="45dp"
        android:textStyle="bold|italic" />

    <LinearLayout
        android:id="@+id/firstPart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/textView"
        android:layout_marginTop="10dp"
        android:weightSum="2">

        <Button
            android:id="@+id/wareBTN"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/btn_press"
            android:text="Ware House"
            android:layout_weight="1" />

        <Button
            android:id="@+id/customerBTN"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_below="@+id/wareBTN"
            android:background="@drawable/btn_press"
            android:text="Customers"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/secondPart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/firstPart"
        android:orientation="horizontal"
        android:weightSum="2">

        <Button
            android:id="@+id/statBTN"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:text="Statistics"
            android:background="@drawable/btn_press"
            android:layout_weight="1" />

        <Button
            android:id="@+id/salesBTN"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_below="@+id/textView"
            android:background="@drawable/btn_press"
            android:text="Sales"
            android:layout_weight="1" />

    </LinearLayout>


    <Button
        android:id="@+id/logoutBTN"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/secondPart"
        android:layout_centerInParent="true"
        android:background="@drawable/btn_press"
        android:layout_marginTop="25dp"
        android:text="logout" />

</RelativeLayout>
